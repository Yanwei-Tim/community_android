<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">
    <include layout="@layout/layout_header"/>

        <ImageView
                android:id="@+id/img"
                android:layout_height="280dp"
                android:layout_width="fill_parent"/>


    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView android:id="@+id/phonepicture"
                  android:layout_alignParentRight="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/t_6"
                />
        <TextView android:id="@+id/phone"
                  android:layout_alignParentRight="true"
                  android:ellipsize="end"
                  android:singleLine="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/white"
                  android:layout_gravity="center_vertical"
                  android:textSize="20dip"
                />
        <EditText android:id="@+id/phonetext"
                  android:layout_alignParentRight="true"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/white"
                  android:layout_gravity="center_vertical"
                  android:textSize="20dip"
                />
    </LinearLayout>

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content">
        <TextView android:id="@+id/fhpicture"
                  android:layout_alignParentRight="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:background="@drawable/t_6"
                />
        <TextView android:id="@+id/fh"
                  android:layout_alignParentRight="true"
                  android:ellipsize="end"
                  android:singleLine="true"
                  android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:textColor="@color/white"
                  android:layout_gravity="center_vertical"
                  android:textSize="20dip"
                />
        <EditText android:id="@+id/fhtext"
                  android:layout_alignParentRight="true"
                  android:layout_width="fill_parent"
                  android:layout_height="wrap_content"
                  android:textColor="@color/white"
                  android:numeric="integer"
                  android:layout_gravity="center_vertical"
                  android:textSize="20dip"
                />
    </LinearLayout>



        <LinearLayout
                android:layout_width="fill_parent"
                android:paddingTop="@dimen/margins_10"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:layout_weight="1"
                android:orientation="horizontal">

                <ImageButton android:id="@+id/reset"
                             android:src="@drawable/reset"
                             android:background="@color/head"
                             android:layout_margin="@dimen/margins_10"
                             android:layout_gravity="left"
                             android:layout_weight="1"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>

                <ImageButton android:id="@+id/success"
                             android:src="@drawable/success"
                             android:background="@color/head"
                             android:layout_weight="1"
                             android:layout_margin="@dimen/margins_10"
                             android:layout_gravity="right"
                             android:layout_width="wrap_content"
                             android:layout_height="wrap_content"/>

        </LinearLayout>


</LinearLayout>