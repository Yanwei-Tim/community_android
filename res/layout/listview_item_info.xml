<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/selector_corner_frame_center">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
                  android:orientation="horizontal"
                  android:layout_width="fill_parent"
                  android:layout_weight="5"
                  android:layout_height="wrap_content">

        <TextView android:id="@+id/id"
                  android:layout_margin="@dimen/margins_5"
                  android:textColor="@color/black"
                  android:visibility="invisible"
                  android:layout_width="wrap_content"
                  android:textSize="@dimen/textSize_28pt"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/name"
                  android:layout_margin="@dimen/margins_5"
                  android:textColor="@color/black"
                  android:layout_width="wrap_content"
                  android:layout_weight="2"
                  android:textSize="@dimen/textSize_28pt"
                  android:layout_height="wrap_content"/>

        <TextView android:id="@+id/idCard"
                  android:layout_margin="@dimen/margins_5"
                  android:textColor="@color/black"
                  android:layout_width="wrap_content"
                  android:textSize="@dimen/textSize_28pt"
                  android:layout_weight="2"
                  android:layout_height="wrap_content"/>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="right">

          <!--  <ImageButton android:textSize="@dimen/textSize_24pt"
                         android:id="@+id/del"
                         android:background="@drawable/del"
                         android:paddingLeft="@dimen/margins_5"
                         android:paddingTop="@dimen/margins_5"
                         android:paddingRight="@dimen/margins_5"
                         android:paddingBottom="@dimen/margins_5"
                         android:gravity="center"
                         android:clickable="true"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginRight="@dimen/margins_5"
                         android:text="@string/info"/>-->

            <ImageButton android:textSize="@dimen/textSize_24pt"
                         android:id="@+id/info"
                         android:background="@drawable/right"
                         android:paddingLeft="@dimen/margins_5"
                         android:paddingTop="@dimen/margins_5"
                         android:paddingRight="@dimen/margins_5"
                         android:paddingBottom="@dimen/margins_5"
                         android:gravity="center"
                         android:clickable="true"
                         android:layout_width="wrap_content"
                         android:layout_height="wrap_content"
                         android:layout_marginRight="@dimen/margins_5"
                         android:text="@string/info"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>